#!/usr/bin/env php
<?php

use \Comodojo\Extender\ExtenderDaemon;
use \Symfony\Component\Yaml\Yaml;
use \Symfony\Component\Yaml\Exception\ParseException;

$base_path = realpath(dirname(__FILE__)."/../../");

$loader = require "$base_path/vendor/autoload.php";
// add PSR4 test classes
$loader->addPsr4('Comodojo\\Extender\\Tests\\', "$base_path/tests/Comodojo/Extender");

$root_path = "$base_path/tests/root";

$conf_file = "$root_path/config/comodojo-configuration.yml";
$conf_data = Yaml::parse(file_get_contents($conf_file));
$conf_data['multithread'] = true;

$tasks_file = "$root_path/config/comodojo-tasks.yml";
$tasks_data = Yaml::parse(file_get_contents($tasks_file));

$plugin_file = "$root_path/config/comodojo-plugins.yml";
$plugin_data = Yaml::parse(file_get_contents($plugin_file));
$plain_plugins = [];
foreach ($plugin_data as $package => $plugins) {
    foreach ($plugins as $plugin) {
        $plain_plugins[] = $plugin;
    }
}

$conf_data['base-path'] = $root_path;

$daemon = new ExtenderDaemon($conf_data, $tasks_data);

// var_dump($plain_plugins);

$daemon->getEvents()->load($plain_plugins);

// $daemon->getEvents()->subscribe('extender.worklog.open', '\Comodojo\Extender\Tests\Mock\Listeners\WorklogListener');

$daemon->init();
